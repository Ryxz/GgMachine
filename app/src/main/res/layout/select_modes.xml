<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    android:orientation="vertical"
    tools:context="com.example.advertisingmachine.qtapplication.StartActivity">



        <Button
            android:id="@+id/next_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_nor_down_first"
            android:text="@string/model_1" />
        <Button
            android:id="@+id/next_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_nor_down_four"
            android:text="@string/model_2" />

        <Button
            android:id="@+id/next_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_nor_down_third"
            android:text="@string/model_3" />

        <Button
            android:id="@+id/next_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_nor_down_two"
            android:text="@string/model_4" />



</LinearLayout>